<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}" />
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
  </plugin-info>
  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="confluencePluginJira" />
  <!-- add our web resources -->
  <web-resource key="confluencePluginJira-resources" name="confluencePluginJira Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="confluencePluginJira.css" location="/css/confluencePluginJira.css" />
    <resource type="download" name="confluencePluginJira.js" location="/js/confluencePluginJira.js" />
    <resource type="download" name="images/" location="/images" />
    <context>confluencePluginJira</context>
  </web-resource>
  <servlet name="Ver requisitos" key="mypluginservletverrequisitos" class="com.um.mariaros.impl.MyPluginServletVerRequisitos">
    <description>Servlet 'ver requisitos' para el plugin de gesti?n de requisitos.</description>
    <url-pattern>/verrequisitos*</url-pattern>
  </servlet>
  <servlet name="Nuevo requisitos" key="mypluginservletnuevorequisito" class="com.um.mariaros.impl.MyPluginServletNuevoRequisito">
    <description>Servlet 'nuevo requisito' para el plugin de gesti?n de requisitos.</description>
    <url-pattern>/nuevorequisito</url-pattern>
  </servlet>

